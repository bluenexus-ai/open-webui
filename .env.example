# Ollama URL for the backend to connect
# The path '/ollama' will be redirected to the specified backend URL
OLLAMA_BASE_URL='http://localhost:11434'

OPENAI_API_BASE_URL=''
OPENAI_API_KEY=''

# AUTOMATIC1111_BASE_URL="http://localhost:7860"

# For production, you should only need one host as
# fastapi serves the svelte-kit built frontend and backend from the same host and port.
# To test with CORS locally, you can set something like
# CORS_ALLOW_ORIGIN='http://localhost:5173;http://localhost:8080'
CORS_ALLOW_ORIGIN='*'

# For production you should set this to match the proxy configuration (127.0.0.1)
FORWARDED_ALLOW_IPS='*'

# DO NOT TRACK
SCARF_NO_ANALYTICS=true
DO_NOT_TRACK=true
ANONYMIZED_TELEMETRY=false

# OAuth Authentication
ENABLE_OAUTH_SIGNUP=true
# Creates email as {user_id}.local when no email provided (required for BlueNexus)
ENABLE_OAUTH_EMAIL_FALLBACK=true
OAUTH_ALLOWED_DOMAINS=*
# Set to false for self-signed certs in local dev
OAUTH_SSL_VERIFY=true
OAUTH_UPDATE_PICTURE_ON_LOGIN=true

# OAuth Token Encryption Keys (generate with: openssl rand -base64 32)
OAUTH_SESSION_TOKEN_ENCRYPTION_KEY=
OAUTH_CLIENT_INFO_ENCRYPTION_KEY=

# OpenID Provider URL (for logout functionality)
# OPENID_PROVIDER_URL=

# ========================================
# BlueNexus Integration
# ========================================

# Master switch - requires BLUENEXUS_CLIENT_ID and BLUENEXUS_CLIENT_SECRET
ENABLE_BLUENEXUS=False

# BlueNexus OAuth credentials (register your app at BlueNexus)
BLUENEXUS_CLIENT_ID=
BLUENEXUS_CLIENT_SECRET=

# BlueNexus URLs
# Backend API (https) - TOKEN_URL and LLM_API_URL are derived from this
BLUENEXUS_API_BASE_URL=
# Frontend OAuth (http, separate port)
BLUENEXUS_AUTHORIZATION_URL=
# Redirect URI - must match what's registered in BlueNexus
BLUENEXUS_REDIRECT_URI=

# Enable automatic sync of chats, notes, prompts to BlueNexus (requires 'user-data' scope)
ENABLE_BLUENEXUS_SYNC=False
